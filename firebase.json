{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      ".git/**",
      ".github/**",
      "backend/**",
      "*.md",
      ".env*",
      "serviceAccountKey.json",
      "test-*.html",
      "*-test.html",
      "test-debug-*.html",
      "test-*.html"
    ],
    "rewrites": [
      {
        "source": "!/js/**",
        "destination": "/index.html"
      },
      {
        "source": "!/css/**",
        "destination": "/index.html"
      },
      {
        "source": "!/components/**",
        "destination": "/index.html"
      },
      {
        "source": "!/pages/**/*.html",
        "destination": "/index.html"
      },
      {
        "source": "!/**/*.@(css|html|js|json|ico|svg|png|jpg|jpeg|gif|woff|woff2|ttf|eot)",
        "destination": "/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=3600"
          }
        ]
      },
      {
        "source": "index.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          },
          {
            "key": "Referrer-Policy",
            "value": "no-referrer-when-downgrade"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "Referrer-Policy",
            "value": "no-referrer-when-downgrade"
          },
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlashBehavior": "REMOVE"
  }
}
