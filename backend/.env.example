# =====================================================
# RDC BACKEND - ENVIRONMENT CONFIGURATION
# =====================================================

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Firebase Configuration (Cloud Database - No Local Storage Needed!)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=7d

# Session Configuration
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=1800000

# Email Service (SendGrid or NodeMailer)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@rdc-system.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway (Stripe)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Redis Configuration (Real-time & Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Google Maps API (Delivery Tracking & Route Optimization)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# AWS Configuration (If using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=rdc-system-bucket

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_INTERVAL=3600000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Machine Learning Model Paths
ML_MODEL_RECOMMENDATIONS=/models/recommendations.pkl
ML_MODEL_DEMAND_FORECAST=/models/demand_forecast.pkl
